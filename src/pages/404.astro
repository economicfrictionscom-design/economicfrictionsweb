---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Not Found" description="Page not found">
  <section class="flex flex-col items-center justify-center min-h-[50vh] text-center">
    <h1 class="text-9xl font-bold text-stone-200 dark:text-stone-800 font-serif mb-4">404</h1>
    <h2 class="text-3xl font-bold text-stone-900 dark:text-stone-100 mb-6">Page Not Found</h2>
    <p class="text-lg text-stone-600 dark:text-stone-400 mb-8 max-w-md">
      The market has corrected, and this page no longer holds value (or never existed).
    </p>
    <a href="/" class="px-6 py-3 bg-blue-700 hover:bg-blue-800 text-white font-bold rounded-lg transition-colors">
      Return to Home
    </a>
  </section>
</BaseLayout>