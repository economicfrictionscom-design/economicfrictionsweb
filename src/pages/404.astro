---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404: Not Found" description="Page not found">
  <div class="flex flex-col items-center justify-center min-h-[50vh] text-center">
    <h1 class="text-6xl font-serif font-bold text-amber-600 dark:text-amber-500 mb-6">404</h1>
    <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-4">Page Not Found</h2>
    <p class="text-slate-500 dark:text-slate-400 max-w-md mb-8">
      The analysis you are looking for has either moved or does not exist.
    </p>
    <a href="/" class="px-6 py-3 bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-bold rounded-lg hover:bg-amber-600 dark:hover:bg-amber-400 transition-colors">
      Return Home
    </a>
  </div>
</BaseLayout>