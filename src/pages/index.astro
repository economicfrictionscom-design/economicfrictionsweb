---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPosts = posts.slice(0, 4);
const olderPosts = posts.slice(4);
---

<BaseLayout title="Home" description="Economic Frictions - Independent Analysis">

  <section class="py-10 border-b border-slate-200 dark:border-slate-800 mb-16">
    <h1 class="text-3xl md:text-4xl font-serif font-bold text-slate-900 dark:text-white mb-6">
      Understanding markets through frictions
    </h1>
    <div class="max-w-3xl">
      <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 font-serif leading-relaxed mb-4">
        <strong class="text-slate-900 dark:text-slate-100">Economic Frictions</strong> explores how frictions in markets shape economic outcomes and influence how people and businesses behave.
      </p>
      <p class="text-sm md:text-base text-slate-500 dark:text-slate-500 font-mono">
        Iâ€™m learning these ideas and publishing my understanding here.
      </p>
    </div>
  </section>

  <section class="mb-24">
    <div class="flex items-center mb-10">
      <h2 class="text-xs font-bold tracking-[0.2em] text-slate-400 uppercase">Latest Analysis</h2>
      <div class="flex-grow border-t border-slate-200 dark:border-slate-800 ml-6"></div>
    </div>

    <div class="space-y-16">
      {latestPosts.map((post) => (
        <article class="group">
          <a href={`/economicfrictionsweb/blog/${post.slug}`} class="block max-w-4xl">
            <div class="flex items-center gap-3 mb-3">
              <span class="px-2 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-400 text-[10px] font-bold uppercase tracking-widest rounded">
                New Issue
              </span>
              <span class="text-slate-400 font-mono text-xs uppercase">
                {post.data.pubDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
              </span>
            </div>
            <h2 class="text-3xl md:text-5xl font-serif font-bold text-slate-900 dark:text-white mb-4 leading-tight group-hover:text-amber-700 dark:group-hover:text-amber-400 transition-colors">
              {post.data.title}
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-400 font-serif leading-relaxed mb-4 border-l-2 border-slate-200 dark:border-slate-800 pl-4">
              {post.data.description}
            </p>
            <div class="inline-flex items-center text-xs font-bold tracking-widest uppercase text-slate-500 group-hover:text-amber-600 transition-colors">
              Read Analysis &rarr;
            </div>
          </a>
        </article>
      ))}
    </div>
  </section>

  {olderPosts.length > 0 && (
    <section class="mb-20">
      <div class="flex items-center mb-10">
        <h2 class="text-xs font-bold tracking-[0.2em] text-slate-400 uppercase">More from the Archive</h2>
        <div class="flex-grow border-t border-slate-200 dark:border-slate-800 ml-6"></div>
      </div>
      <ul class="grid gap-8 md:grid-cols-2">
        {olderPosts.map((post) => (
          <li class="group border border-slate-200 dark:border-slate-800 rounded-lg p-6 hover:border-amber-200 dark:hover:border-amber-900 transition-colors">
            <a href={`/economicfrictionsweb/blog/${post.slug}/`} class="block h-full flex flex-col">
              <span class="text-xs font-mono text-slate-400 mb-3">
                {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </span>
              <h3 class="text-xl font-serif font-bold text-slate-900 dark:text-white mb-2 group-hover:text-amber-700 dark:group-hover:text-amber-400 transition-colors">
                {post.data.title}
              </h3>
              <p class="text-sm text-slate-500 dark:text-slate-400 flex-grow leading-relaxed">
                {post.data.description}
              </p>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )}

  <div class="text-center pb-8">
    <a href="/economicfrictionsweb/archive" class="inline-block px-8 py-4 border border-slate-300 dark:border-slate-700 text-slate-600 dark:text-slate-300 text-xs font-bold uppercase tracking-widest hover:bg-slate-50 dark:hover:bg-slate-800 transition-all">
      Explore All Blogs
    </a>
  </div>

</BaseLayout>