---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPosts = posts.slice(0, 4);
const olderPosts = posts.slice(4);
---

<BaseLayout title="Home" description="Independent Analysis of Market Mechanisms">

  <section class="py-12 border-b border-slate-200 dark:border-slate-800 mb-16">
    <h1 class="text-4xl md:text-6xl font-serif font-bold text-slate-900 dark:text-white mb-8 leading-tight">
      Understanding markets <br class="hidden md:block"/> through frictions
    </h1>
    <div class="max-w-2xl">
      <p class="text-xl text-slate-600 dark:text-slate-400 font-serif leading-relaxed italic">
        "Market outcomes are rarely perfect; they are shaped by the obstacles we ignore."
      </p>
    </div>
  </section>

  <section class="mb-24">
    <div class="flex items-center mb-12">
      <h2 class="text-xs font-bold tracking-[0.3em] text-amber-600 dark:text-amber-500 uppercase">Recent Issues</h2>
      <div class="flex-grow border-t border-slate-200 dark:border-slate-800 ml-8"></div>
    </div>

    <div class="space-y-20">
      {latestPosts.map((post) => (
        <article class="group relative pl-0 md:pl-8">
          <div class="hidden md:block absolute left-0 top-0 bottom-0 w-px bg-slate-200 dark:bg-slate-800 group-hover:bg-amber-500 transition-colors"></div>
          
          <a href={`/blog/${post.slug}`} class="block max-w-4xl">
            <div class="flex items-center gap-4 mb-4">
              <span class="text-slate-400 font-mono text-xs uppercase tracking-tighter">
                {post.data.pubDate.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
              </span>
            </div>
            <h2 class="text-3xl md:text-5xl font-serif font-bold text-slate-900 dark:text-white mb-5 group-hover:text-amber-600 transition-colors">
              {post.data.title}
            </h2>
            <p class="text-lg text-slate-600 dark:text-slate-400 font-serif leading-relaxed mb-6">
              {post.data.description}
            </p>
            <span class="text-xs font-bold uppercase tracking-widest text-amber-600 border-b-2 border-amber-600/20 pb-1 group-hover:border-amber-600 transition-all">
              Read Analysis
            </span>
          </a>
        </article>
      ))}
    </div>
  </section>

  {olderPosts.length > 0 && (
    <section class="mb-20">
      <h2 class="text-xs font-bold tracking-[0.3em] text-slate-400 uppercase mb-12">From the Archive</h2>
      <div class="grid gap-10 md:grid-cols-2">
        {olderPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group p-6 border border-slate-200 dark:border-slate-800 rounded hover:border-amber-500 transition-colors">
            <span class="text-[10px] font-mono text-slate-400 block mb-2">
              {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
            </span>
            <h3 class="text-xl font-serif font-bold text-slate-900 dark:text-white group-hover:text-amber-600 transition-colors">
              {post.data.title}
            </h3>
          </a>
        ))}
      </div>
    </section>
  )}

  <div class="text-center">
    <a href="/archive" class="inline-block px-10 py-4 bg-slate-900 dark:bg-white text-white dark:text-slate-900 text-xs font-bold uppercase tracking-widest hover:scale-105 transition-transform">
      Explore Archive
    </a>
  </div>

</BaseLayout>