---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const postsByYear = allPosts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(postsByYear).sort((a, b) => b - a);
---

<BaseLayout title="All Blogs" description="All posts by year" wide={true}>
  
  <section class="max-w-4xl mx-auto mt-12 mb-24">
    <h1 class="text-4xl md:text-5xl font-serif font-bold text-slate-900 dark:text-white mb-16 text-center">
      All Blogs
    </h1>

    <div class="space-y-16">
      {years.map((year) => (
        <div>
          <h2 class="text-6xl font-serif font-bold text-slate-200 dark:text-slate-800 mb-8 border-b border-slate-200 dark:border-slate-800 pb-2">
            {year}
          </h2>

          <ul class="grid gap-8 md:grid-cols-2">
            {postsByYear[year].map((post) => (
              <li class="group border border-slate-200 dark:border-slate-800 rounded-lg p-6 hover:border-amber-200 dark:hover:border-amber-900 transition-colors">
                <a href={`/blog/${post.slug}/`} class="block h-full flex flex-col">
                  <span class="text-xs font-mono text-amber-600 dark:text-amber-500 mb-3 uppercase tracking-wider">
                    {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                  </span>
                  <h3 class="text-xl font-serif font-bold text-slate-900 dark:text-white mb-2 group-hover:text-amber-700 dark:group-hover:text-amber-400 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-slate-500 dark:text-slate-400 flex-grow leading-relaxed">
                    {post.data.description}
                  </p>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

  </section>
</BaseLayout>