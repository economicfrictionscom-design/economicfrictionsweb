---
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Comments from '../components/Comments.astro';
import Subscribe from '../components/Subscribe.astro';

const { title, description, pubDate, updatedDate } = Astro.props;
---

<BaseLayout title={title} description={description} full={true}>
  <div class="max-w-[95rem] mx-auto px-6 lg:px-12 grid grid-cols-1 lg:grid-cols-[1fr_320px] gap-12 xl:gap-24 py-16 relative">
    
    <article class="min-w-0">
       <header class="mb-16">
        <div class="text-amber-600 dark:text-amber-500 font-mono text-sm uppercase tracking-widest mb-4">
          <FormattedDate date={pubDate} />
        </div>
        <h1 class="text-5xl md:text-7xl font-serif font-bold text-slate-900 dark:text-white leading-[1.1] tracking-tight">
          {title}
        </h1>
        <div class="h-1.5 w-24 bg-amber-500 mt-10"></div>
      </header>

      <div class="prose prose-slate dark:prose-invert font-serif max-w-none prose-lg md:prose-xl leading-relaxed">
        <slot />
      </div>

      <div id="static-subscribe-section" class="mt-24 border-t border-slate-200 dark:border-slate-800 pt-12">
        <Subscribe />
        <div class="mt-16">
          <Comments />
        </div>
      </div>
    </article>

    <aside class="hidden lg:block">
      <div id="sidebar-subscribe-container" class="sticky top-24 transition-all duration-700 ease-in-out">
         <div class="bg-white dark:bg-slate-900/60 backdrop-blur-md border border-slate-200 dark:border-slate-800 p-8 rounded-3xl shadow-2xl">
            <h3 class="font-serif font-bold text-2xl text-slate-900 dark:text-white mb-3">Economic Frictions</h3>
            <form action="https://buttondown.email/api/emails/embed-subscribe/devansh" method="post" target="popupwindow" class="flex flex-col gap-4">
                <input type="email" name="email" placeholder="email@example.com" required class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-slate-800" />
                <input type="hidden" value="1" name="embed" />
                <button type="submit" class="w-full py-4 bg-slate-900 dark:bg-amber-500 text-white dark:text-slate-900 font-bold rounded-xl">Subscribe</button>
            </form>
         </div>
      </div>
    </aside>
  </div>

  <script is:inline>
    // Vanish script remains the same as previous turn
    const sidebar = document.getElementById('sidebar-subscribe-container');
    const staticSection = document.getElementById('static-subscribe-section');
    window.addEventListener('scroll', () => {
      if (!sidebar || !staticSection) return;
      const staticRect = staticSection.getBoundingClientRect();
      if (staticRect.top < window.innerHeight - 100) {
        sidebar.style.opacity = '0';
        sidebar.style.pointerEvents = 'none';
      } else {
        sidebar.style.opacity = '1';
        sidebar.style.pointerEvents = 'auto';
      }
    });
  </script>
</BaseLayout>