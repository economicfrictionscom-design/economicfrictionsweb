---
// src/layouts/BlogPost.astro
import '../styles/global.css';

const { frontmatter } = Astro.props;

// LOGIC FIX: Check if title is in 'frontmatter' OR directly in 'Astro.props'
const title = frontmatter?.title || Astro.props.title;
const pubDate = frontmatter?.pubDate || Astro.props.pubDate;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    
    <nav style="border-bottom: 1px solid var(--ef-pale-blue); padding: 1rem;">
      <div class="container">
        <span style="font-weight: bold; color: white;">Economic Frictions</span>
      </div>
    </nav>

    <div class="main-container">
      
      <main class="content-area">
        <h1 class="article-title">{title}</h1>
        <p class="article-date">{pubDate}</p>
        <hr class="divider" />
        
        <article class="prose">
          <slot /> 
        </article>
      </main>

      <aside class="sidebar-area">
        <div class="sticky-wrapper">
          <div class="subscribe-card">
            <h3>Economic Frictions</h3>
            <p style="color: var(--ef-pale-blue); font-size: 0.9rem; margin: 1rem 0;">
              Analysis of the hidden mechanisms shaping markets.
            </p>
            <input 
              type="email" 
              placeholder="Email address" 
              style="width: 100%; padding: 10px; border-radius: 4px; border: none;"
            />
            <button class="subscribe-btn">Subscribe</button>
          </div>
        </div>
      </aside>

    </div>

  </body>
</html>