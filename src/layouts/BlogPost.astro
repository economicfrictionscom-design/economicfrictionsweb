---
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Comments from '../components/Comments.astro';
import Subscribe from '../components/Subscribe.astro';

const { title, description, pubDate, updatedDate } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 py-12 relative">
    
    <article class="min-w-0">
      <header class="mb-12">
        <div class="text-amber-600 dark:text-amber-500 font-mono text-sm uppercase tracking-widest mb-4">
          <FormattedDate date={pubDate} />
        </div>
        <h1 class="text-4xl md:text-6xl font-serif font-bold text-slate-900 dark:text-white leading-tight">
          {title}
        </h1>
        <div class="h-1 w-20 bg-amber-500 mt-8"></div>
      </header>

      <div class="prose prose-slate dark:prose-invert font-serif max-w-none">
        <slot />
      </div>

      <div id="static-subscribe-section" class="mt-20 border-t border-slate-200 dark:border-slate-800 pt-10">
        <Subscribe />
        <div class="mt-12">
          <Comments />
        </div>
      </div>
    </article>

    <aside 
      id="sidebar-subscribe-container" 
      class="hidden xl:block fixed top-1/4 right-8 w-72 transition-all duration-700 ease-in-out opacity-100 translate-y-0 z-50"
    >
      <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 p-6 rounded-2xl shadow-2xl transition-colors duration-300">
        <h3 class="font-serif font-bold text-lg text-slate-900 dark:text-white mb-2">Economic Frictions</h3>
        <p class="text-xs text-slate-500 dark:text-slate-400 mb-6 leading-relaxed">
          Analysis of the hidden mechanisms shaping markets.
        </p>
        
        <form
          action="https://buttondown.email/api/emails/embed-subscribe/devansh"
          method="post"
          target="popupwindow"
          onsubmit="window.open('https://buttondown.email/api/emails/embed-subscribe/devansh', 'popupwindow')"
          class="flex flex-col gap-3"
        >
          <input
            type="email"
            name="email"
            placeholder="Email address"
            required
            class="w-full px-4 py-2 text-sm rounded-lg border border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:border-amber-500 outline-none"
          />
          <button
            type="submit"
            class="w-full px-4 py-2 bg-slate-900 dark:bg-amber-500 text-white dark:text-slate-900 text-sm font-bold rounded-lg hover:bg-amber-400 transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </aside>
  </div>

  <script is:inline>
    // Using IntersectionObserver for 100% reliability
    const sidebar = document.getElementById('sidebar-subscribe-container');
    const staticSection = document.getElementById('static-subscribe-section');

    if (sidebar && staticSection) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // High-performance vanish
            sidebar.style.opacity = '0';
            sidebar.style.pointerEvents = 'none';
            sidebar.style.transform = 'translateX(50px)';
          } else {
            // Restore when scrolling back up
            sidebar.style.opacity = '1';
            sidebar.style.pointerEvents = 'auto';
            sidebar.style.transform = 'translateX(0)';
          }
        });
      }, {
        // Trigger when the static section is within 200px of the bottom
        rootMargin: '0px 0px -200px 0px',
        threshold: 0
      });

      observer.observe(staticSection);
    }
  </script>
</BaseLayout>