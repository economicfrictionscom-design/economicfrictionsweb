---
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Comments from '../components/Comments.astro';
import Subscribe from '../components/Subscribe.astro';

const { title, description, pubDate, updatedDate } = Astro.props;
---

<BaseLayout title={title} description={description} full={true}>
  <div class="max-w-[100rem] mx-auto px-6 lg:px-12 grid grid-cols-1 lg:grid-cols-[8.5fr_1.5fr] gap-16 py-16 relative">
    
    <article class="min-w-0">
      <header class="max-w-3xl mx-auto mb-16 border-b border-slate-100 dark:border-slate-800/50 pb-12">
        <div class="text-amber-600 dark:text-amber-500 font-mono text-[10px] uppercase tracking-[0.3em] mb-6">
          <FormattedDate date={pubDate} />
        </div>
        <h1 class="text-5xl md:text-7xl font-serif font-bold text-slate-900 dark:text-white leading-[1.1] tracking-tight mb-8">
          {title}
        </h1>
        <div class="h-1.5 w-20 bg-amber-500"></div>
      </header>

      <div class="prose prose-slate dark:prose-invert font-serif max-w-3xl mx-auto prose-xl leading-[1.8] text-slate-800 dark:text-slate-200">
        <slot />
      </div>

      <div id="static-subscribe-section" class="max-w-3xl mx-auto mt-32 border-t border-slate-200 dark:border-slate-800 pt-20">
        <div class="bg-slate-100 dark:bg-slate-800/40 p-10 rounded-[2.5rem] shadow-inner text-center">
            <Subscribe />
        </div>
        <div class="mt-20">
          <Comments />
        </div>
      </div>
    </article>

    <aside class="hidden lg:block">
      <div id="sidebar-subscribe-container" class="sticky top-32 transition-all duration-700 ease-in-out z-40">
         <div class="bg-white dark:bg-slate-900/60 backdrop-blur-md border border-slate-200 dark:border-slate-800 p-6 rounded-2xl shadow-xl">
            <h3 class="font-serif font-bold text-xl text-slate-900 dark:text-white mb-2">Economic Frictions</h3>
            <p class="text-xs text-slate-500 dark:text-slate-400 mb-6 leading-relaxed">
              Analysis of the hidden mechanisms shaping markets.
            </p>
            
            <form action="https://buttondown.email/api/emails/embed-subscribe/devansh" method="post" target="popupwindow" class="flex flex-col gap-3">
                <input 
                  type="email" 
                  name="email" 
                  placeholder="Email address" 
                  required 
                  class="w-full px-4 py-2.5 text-xs rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50/50 dark:bg-slate-800/50 text-slate-900 dark:text-white outline-none focus:ring-1 focus:ring-amber-500" 
                />
                <input type="hidden" value="1" name="embed" />
                <button type="submit" class="w-full py-3 bg-slate-900 dark:bg-amber-500 text-white dark:text-slate-950 text-[11px] font-bold uppercase tracking-widest rounded-xl hover:opacity-90 transition-all shadow-md">
                  Subscribe
                </button>
            </form>
         </div>
      </div>
    </aside>
  </div>

  <script is:inline>
    const sidebar = document.getElementById('sidebar-subscribe-container');
    const staticSection = document.getElementById('static-subscribe-section');

    window.addEventListener('scroll', () => {
      if (!sidebar || !staticSection) return;
      const staticRect = staticSection.getBoundingClientRect();
      
      // Smart Vanish: Hides sidebar when footer subscription section appears
      if (staticRect.top < window.innerHeight - 100) {
        sidebar.style.opacity = '0';
        sidebar.style.pointerEvents = 'none';
        sidebar.style.transform = 'translateY(15px) scale(0.95)';
      } else {
        sidebar.style.opacity = '1';
        sidebar.style.pointerEvents = 'auto';
        sidebar.style.transform = 'translateY(0) scale(1)';
      }
    });
  </script>
</BaseLayout>