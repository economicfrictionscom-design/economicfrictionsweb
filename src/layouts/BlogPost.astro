---
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Comments from '../components/Comments.astro';
import Subscribe from '../components/Subscribe.astro';

const { title, description, pubDate, updatedDate } = Astro.props;
---

<BaseLayout title={title} description={description} full={true}>
  <div class="max-w-[95rem] mx-auto px-6 lg:px-16 grid grid-cols-1 lg:grid-cols-[1fr_400px] gap-16 py-16 relative">
    
    <article class="min-w-0">
      <header class="mb-16 border-b border-slate-100 dark:border-slate-800/50 pb-12">
        <div class="text-amber-600 dark:text-amber-500 font-mono text-[11px] uppercase tracking-[0.2em] mb-6">
          <FormattedDate date={pubDate} />
        </div>
        <h1 class="text-5xl md:text-7xl font-serif font-bold text-slate-900 dark:text-white leading-[1.1] tracking-tight mb-8">
          {title}
        </h1>
        <div class="h-1 w-16 bg-amber-500"></div>
      </header>

      <div class="prose prose-slate dark:prose-invert font-serif max-w-none prose-xl leading-[1.8] text-slate-800 dark:text-slate-200">
        <slot />
      </div>
    </article>

    <aside class="hidden lg:block">
      <div id="sidebar-subscribe-container" class="sticky top-28 transition-all duration-700 ease-in-out z-40">
         <div class="group bg-white dark:bg-slate-900/40 backdrop-blur-xl border border-slate-200 dark:border-slate-800 ring-1 ring-slate-950/5 dark:ring-white/5 px-10 py-6 rounded-2xl shadow-lg hover:shadow-2xl hover:-translate-y-1 transition-all duration-300">
            <h3 class="font-serif font-bold text-xl text-slate-900 dark:text-white mb-1.5 tracking-tight italic">Economic Frictions</h3>
            <p class="text-[13px] text-slate-500 dark:text-slate-400 mb-6 leading-relaxed font-sans">
              Deep dives into the structural forces shaping the Indian economy.
            </p>
            
            <form action="https://buttondown.email/api/emails/embed-subscribe/devansh" method="post" target="popupwindow" class="flex flex-col gap-3">
                <input 
                  type="email" 
                  name="email" 
                  placeholder="email@example.com" 
                  required 
                  class="w-full px-4 py-3 text-sm rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50/50 dark:bg-slate-800/50 text-slate-900 dark:text-white outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500 transition-all placeholder:text-slate-400" 
                />
                <input type="hidden" value="1" name="embed" />
                <button type="submit" class="w-full py-3.5 bg-slate-900 dark:bg-amber-500 text-white dark:text-slate-950 text-[13px] font-bold uppercase tracking-widest rounded-xl hover:bg-slate-800 dark:hover:bg-amber-400 transition-all shadow-md active:scale-95">
                  Join the Journal
                </button>
            </form>
         </div>
      </div>
    </aside>

    <div id="static-subscribe-section" class="col-span-full mt-32 border-t border-slate-200 dark:border-slate-800 pt-24 pb-12">
      <div class="max-w-2xl mx-auto text-center">
        <div class="bg-slate-100 dark:bg-slate-800/30 p-12 rounded-[2.5rem] border border-slate-200/50 dark:border-slate-700/50 shadow-inner">
            <Subscribe />
            <p class="text-[10px] text-slate-400 dark:text-slate-500 mt-6 uppercase tracking-[0.2em] font-bold">
              Secure & Private â€¢ One-click Unsubscribe
            </p>
        </div>

        <div class="mt-24 text-left">
          <Comments />
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    const sidebar = document.getElementById('sidebar-subscribe-container');
    const staticSection = document.getElementById('static-subscribe-section');

    window.addEventListener('scroll', () => {
      if (!sidebar || !staticSection) return;
      const staticRect = staticSection.getBoundingClientRect();
      
      // Precision Vanish
      if (staticRect.top < window.innerHeight - 50) {
        sidebar.style.opacity = '0';
        sidebar.style.pointerEvents = 'none';
        sidebar.style.transform = 'translateY(15px) scale(0.98)';
      } else {
        sidebar.style.opacity = '1';
        sidebar.style.pointerEvents = 'auto';
        sidebar.style.transform = 'translateY(0) scale(1)';
      }
    });
  </script>
</BaseLayout>